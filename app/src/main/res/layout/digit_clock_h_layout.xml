<?xml version="1.0" encoding="utf-8"?>
<com.readboy.wearlauncher.view.DigitClock xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="center_horizontal"
	app:clockType="@integer/dial_type_h"
	>
    
    <ImageView 
        android:id="@+id/hour0"
        android:layout_width="46dp"
    	android:layout_height="75dp"
    	android:background="@drawable/num_clock_0"
        />
    <ImageView 
        android:id="@+id/hour1"
        android:layout_width="46dp"
    	android:layout_height="75dp"
    	android:layout_marginLeft="8dp"
    	android:background="@drawable/num_clock_0"
        />
    <ImageView 
        android:id="@+id/dot"
        android:layout_width="12dp"
    	android:layout_height="75dp"
    	android:layout_marginLeft="8dp"
    	android:background="@drawable/num_clock_dot"
        />
    <ImageView 
        android:id="@+id/min0"
        android:layout_width="46dp"
    	android:layout_height="75dp"
    	android:layout_marginLeft="8dp"
    	android:background="@drawable/num_clock_0"
        />
    <ImageView 
        android:id="@+id/min1"
        android:layout_width="46dp"
    	android:layout_height="75dp"
    	android:layout_marginLeft="8dp"
    	android:background="@drawable/num_clock_0"
        />
</com.readboy.wearlauncher.view.DigitClock>
